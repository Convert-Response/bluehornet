/**
 * Add Global Configuration Menu
 */
function bluehornet_admin() {
  $form = array();

  $form['bluehornet_cid'] = array(
    '#type' => 'textfield',
    '#title' => t('Bluehornet CID'),
    '#default_value' => variable_get('bluehornet_cid', 'XXXXXXX'),
    '#size' => 32,
    '#maxlength' => 2,
    '#description' => t("CID of the Bluehornet Account"),
    '#required' => TRUE, 
  );
  
  return system_settings_form($form);
}

/**
 * Implements hook_permission().
 */
function bluehornet_permission() {
  return array(
    'access bluehornet content' => array(
      'title' => t('Access content for the Bluehornet module'),
    )
  );
}

